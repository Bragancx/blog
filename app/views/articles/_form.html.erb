<%= simple_form_for article do |f| %>
    <div class="form-inputs" >
        <%= f.input :title, input_html: { class: "form-control" } %>
        <%= f.input :body, input_html: { rows: 10, class: "form-control" } %>
        <%= f.association :category, collection: Category.sorted, prompt: t('articles.form.choose_category'), input_html: { class: "form-control" }%>
    </div>

    <div class="mb-3" >
        <%= f.button :submit, class: 'btn btn-primary' %>
        <%= link_to t('app.button.back'), root_path, class: 'btn btn-secondary' %>
    </div>
<% end %>